    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50.76,
        "functions": 77.27,
        "lines": 88.05,
        "statements": 76.25
      }
