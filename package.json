    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@vroskus/eslint-config": "^1.0.30",
    "body-parser": "^2.2.1",
    "express": "^5.2.1",
    "jest": "^30.2.0",
    "jest-coverage-thresholds-bumper": "^1.1.0",
    "supertest": "^7.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageReporters": [
      "json-summary",
      "text"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
